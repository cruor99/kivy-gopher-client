<StartScreen>:
    BoxLayout:
        orientation: "vertical"
        Toolbar:
            id: toolbar
            title: "Gopherclient: {}{}".format(app.root.title_url, app.root.title_selector)
            left_action_items: [["menu", lambda x: app.root.ids.nav_layout.toggle_nav_drawer()]]
            md_bg_color: app.theme_cls.primary_color
            # This is merely to get white text. Weird bug going on?
            background_palette: "Red"
        FloatLayout:
            RecycleView:
                id: jobscroll
                MDList:
                    id: menu_list
                    size_hint_x: 1
            MDFloatingActionButton:
                icon: "magnify"
                size_hint: None, None
                size: dp(56), dp(56)
                opposite_colors: True
                elevation_normal: 8
                pos_hint: {"center_x": .9, "center_y": .1}
                on_release: root.url_popup()



<UrlPopup>:
    title: "Write your URL"
    size_hint: .8, None
    height: dp(200)
    MDTextField:
        hint_text: "example: sdf.org"
        on_text: root.url = self.text
        on_text_validate: root.dismiss()