#:import MDCard kivymd.card.MDCard
<TextScreen>:
    BoxLayout:
        orientation: "vertical"
        Toolbar:
            id: toolbar
            title: "Gopherclient: {}{}".format(app.root.title_url, app.root.title_selector)
            left_action_items: [["menu", lambda x: app.root.ids.nav_layout.toggle_nav_drawer()]]
            md_bg_color: app.theme_cls.primary_color
            # This is merely to get white text. Weird bug going on?
            background_palette: "Red"
        FloatLayout:
            MDCard:
                size_hint: .95, .95
                pos_hint: {"center_x": .5, "center_y": .5}
                RecycleView:
                    padding: 20
                    size_hint_y: .98
                    GridLayout:
                        cols: 1
                        id: label_list
                        size_hint_y: None
                        height: self.minimum_height

    
    
